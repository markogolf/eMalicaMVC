<script>
    $(document).ready(function () {
        $("#dataGrid").DataTable({
            "language": {
                "sProcessing": "Nalagam...",
                "lengthMenu": "Prikaži _MENU_ zapisov na strani",
                "zeroRecords": "Ni zadetkov",
                "info": "stran _PAGE_ od _PAGES_",
                "infoEmpty": "Ni zadetkov",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "sSearch": "Iskanje:",
                "oPaginate": {
                    "sFirst": "Prva",
                    "sLast": "Zadnja",
                    "sNext": "Naslednja",
                    "sPrevious": "Prejšnja"
                },
                "oAria": {
                    "sSortAscending": ": padajoče",
                    "sSortDescending": ": naraščajoče"
                }
            },
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 50,
            "autoWidth": false,

            "ajax": {
                /**/
                "url": 'rootUrlReport/LoadData/'.replace("rootUrl", '@Url.Content("~")'),
                "data": {
                    weekParam: $("#Week").val(),
                    monthParam: $("#Month").val(),
                    dayParam: $("#Day").val(),
                    },
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0,1,2],
                    "visible": true,
                    "searchable": true
                },
                {
                    "targets": [3],
                    "searchable": true,
                    "orderable": true
                    }],


            "columns": [
                {
                    "data": "Date", "type": "date ",
                    "render": function (value) {
                        if (value === null) return "";
                        var pattern = /Date\(([^)]+)\)/;//date format from server side
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return dt.getDate() + "." + (dt.getMonth() + 1) + "." + dt.getFullYear();
                    }
                },
                {
                    "data": "Name", "autoWidth": true,
                    "render": function (data, type, row, meta) {
                        return data;
                    }
                },
                { "data": "Price", "autoWidth": true },
                { "data": "NumOfOrders", "autoWidth": true },
                {
                    data: null, render: function (data, type, row) {
                        return "<a href='#' class='btn' title='Podrobnosti' onclick=Details('" + row.Id + "');>Podrobnosti</a>";
                    }
                },

            ]

        });

    });
</script>

