        <label>Datum: @Model.Menu.Date.ToString("dd.MM.yyyy")</label>
        <br />
        <label>Malica: @Model.Menu.Name</label>
        <br />


        @foreach (var status in Model.Details.Select(m => m.Status).Distinct().OrderBy(o=>o))
        {
            <br />
            @Html.Label("Status: " + status);
                <table class="detailsTable" border="0">
            @foreach (var item in Model.Details.Where(m => m.Status == status))
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Comment</td>
                </tr>
            }
        </table>
